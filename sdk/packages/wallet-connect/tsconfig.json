{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@zksdk/core": ["../../packages/core/src"],
      "@zksdk/core/*": ["../../packages/core/src/*"],
      "@zksdk/privacy-provider": ["../../packages/providers/privacy/src"],
      "@zksdk/privacy-provider/*": ["../../packages/providers/privacy/src/*"],
      "@zksdk/railgun-provider": ["../../packages/providers/railgun/src"],
      "@zksdk/railgun-provider/*": ["../../packages/providers/railgun/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    { "path": "../core" },
    { "path": "../providers/privacy" },
    { "path": "../providers/railgun" }
  ]
}
